<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginmethodActivity"
    android:background="@color/light_white"
    android:padding="15dp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:layout_marginBottom="5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="@color/black"
        android:layout_marginBottom="15dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Username_activity_loginmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:fontFamily="serif"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:textSize="18sp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_key_24"
        app:startIconTint="@color/black"
        app:endIconTint="@color/black"
        app:endIconMode="password_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Password_activity_loginmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:maxLines="1"
            android:fontFamily="serif"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_ForgotPass_activity_loginmethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#008DFD"
        android:text="Quên mật khẩu? "
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:gravity="end" />

    <androidx.appcompat.widget.AppCompatButton
        android:fontFamily="@font/bevan"
        android:id="@+id/btn_Login_activity_loginmethod"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/black"
        android:text="Đăng nhập"
        android:textColor="@color/white"/>

    <TextView
        android:text="Hoặc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LoginWithFacebook_activity_loginmethod"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_btn"
        android:backgroundTint="#3B5999"
        android:drawableStart="@drawable/facebook_icon"
        android:fontFamily="@font/bevan"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:text="Đăng nhập với Facebook"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LoginWithGoogle_activity_loginmethod"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/google_icon"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/bevan"
        android:textSize="14sp"
        android:text="Đăng nhập với Google" />

</LinearLayout>